#!/usr/bin/env ruby

require 'date'
require 'csv'

class Date
  def weekend?
    saturday? or sunday?
  end
end

begin
  d = Date.parse ARGV.join ' '
rescue ArgumentError
  d = Date.parse Date.today.strftime "%Y-%m-01" # this month
end

m = d.month

CSV do |csv|
  csv << ['Date', 'Start time', 'End time', 'Duration', 'Description']
  while (d.month == m) do
    if d.weekend?
      csv << Array.new(5, '')
    else
      csv <<  [d,  '9:00', '13:30', '', '']
      csv <<  [d, '15:30', '19:30', '', '']
      csv <<  Array.new(5, '')
    end
    d += 1
  end

end

