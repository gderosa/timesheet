#!/usr/bin/env ruby

require 'date'
# require 'facets/time'
require 'google_drive'

class Date
  def weekend?
    saturday? or sunday?
  end
end

class Timesheet
  DEFAULT_PATH = 'timesheet'

  def initialize(h={:configfile => "#{ENV['HOME']}/.timesheet.yml"})
    @config = YAML.load File.read h[:configfile] # TODO: not from file
  end

  def connect
    @google_drive = GoogleDrive.login(@config[:username], @config[:password])
  end

  def method_missing(id, *args, &blk)
    @google_drive.send id, *args, &blk
  end
end

begin
  d = Date.parse ARGV.join ' '
rescue ArgumentError
  d = Date.parse Date.today.strftime "%Y-%m-01" # this month, 1st day
end

m = d.month

timesheet = Timesheet.new
timesheet.connect
worksheet = timesheet.file_by_title(Timesheet::DEFAULT_PATH).worksheets[0]

worksheet.update_cells 1, 1, [
  ['Date', 'Start Time', 'End Time', 'Duration', 'Description']
]

row = 2

while (d.month == m) do
  # p d
  if d.weekend?
    worksheet[row, 1] = nil
    worksheet[row, 2] = nil
    worksheet[row, 3] = nil
    worksheet[row, 4] = "=C#{row}-B#{row}"
    row += 1
  else
    worksheet[row, 1] = d
    worksheet[row, 2] = '09.00'
    worksheet[row, 3] = '13.30'
    worksheet[row, 4] = "=C#{row}-B#{row}"
    row += 1
    worksheet[row, 1] = d
    worksheet[row, 2] = '15.30'
    worksheet[row, 3] = '19.30'
    worksheet[row, 4] = "=C#{row}-B#{row}"
    row += 1
    worksheet[row, 1] = nil
    worksheet[row, 2] = nil
    worksheet[row, 3] = nil
    worksheet[row, 4] = "=C#{row}-B#{row}"
    row += 1
  end
  d += 1
end

row += 1

worksheet[row, 4] = "=SUM(D2:D#{row-1})"

worksheet.synchronize


